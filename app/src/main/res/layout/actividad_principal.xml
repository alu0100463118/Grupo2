<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Actividad_Principal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Termometro"
        android:id="@+id/Boton_Termometro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:onClick="lanzar_Termometro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulsometro"
        android:id="@+id/boton_Pulsometro"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="lanzar_Pulsometro" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor de Luz"
        android:id="@+id/Boton_Luz"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/boton_Pulsometro"
        android:layout_alignStart="@+id/Boton_Termometro"
        android:onClick="lanzar_Luz" />
</RelativeLayout>
